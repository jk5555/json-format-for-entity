<idea-plugin>
    <id>com.kun.FormatJSONForEntity</id>
    <name>FormatJSONForEntity</name>
    <vendor email="kun1.0@qq.com" url="https://github.com/jk5555/json-format-for-entity">项目地址</vendor>

    <description><![CDATA[
    The purpose of this plugin is mainly to convert the current entity class into a JSON string<br>
    这个插件的用途主要是将当前实体类转化为JSON字符串<br>
    <em>kun</em>
    ]]></description>

    <change-notes>
        version 1.0  First version. May be have some problem. Solve later(If there is a future! haha!!!)&lt;br&gt;
        &lt;em&gt;kun&lt;/em&gt;
    </change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="format.json" class="com.kun.format.FormatJSONCore" text="格式化实体类成JSON" description="格式化实体类成JSON">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
    </actions>

</idea-plugin>